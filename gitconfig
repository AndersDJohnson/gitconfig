# include requires git 1.7.10+ or some such
[include]
  path = .gitconfig-user
  path = .gitconfig-github
  path = .gitconfig-host
  path = .gitconfig.host
[color]
  ui = true
[push]
  # not supported in git 1.7.x
  #default = simple
  default = current
[alias]
  s = status
  st = status
  ss = status -s
  sb = status -sb
  c = commit
  cm = commit -m
  can = commit --amend --no-edit
  ca = commit --amend
  cn = commit --no-edit
  conflicts = diff --name-only --diff-filter=U
  cf        = diff --name-only --diff-filter=U
  cl = clone
  co = checkout
  br = branch
  l  = log
  lp = log --pretty=oneline --stat --decorate
  fixup    = commit --amend --no-edit
  fu       = commit --amend --no-edit
  recommit = commit --amend --no-edit
  rc       = commit --amend --no-edit
  reword = commit --amend
  rw     = commit --amend
  rb = rebase
  rbi = rebase -i
  aliases = "!git config -l | grep alias | cut -c 7-"
  alias = "!f() { git config --global alias.$1 \"$2\"; }; f"
  unalias = "!f() { git config --global --unset alias.$1; }; f"
  p = push --force
  pf = push --force
  d = diff
  dn = diff --name-only
  last = diff --cached HEAD^
  this = diff --staged
  staged = diff --staged
  sg     = diff --staged
  ds     = diff --staged
  cf = diff --diff-filter=U --name-only
  rt = remote
  rtv = remote -v
  pu = "!git fetch origin -v; git fetch upstream -v; git merge upstream/master"
  au = add -u
  aa = add -A
  ap = add -p
  unadd = reset HEAD
  r = reset
